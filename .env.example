# VFL Manager Bot Configuration
# Discord Bot Settings
DISCORD_TOKEN=your_discord_bot_token_here
PUBLIC_KEY=your_discord_public_key_here
APP_ID=your_discord_app_id_here

# Server Configuration
DEPLOYMENT_URL=localhost:3000
PORT=3000
NODE_ENV=development

# Database Configuration (Firestore)
# For production with service account file
SERVICE_ACCOUNT_FILE=/path/to/service-account.json
# OR for production with inline service account
SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project",...}
# For development with emulator
FIRESTORE_EMULATOR_HOST=localhost:8080

# Web Dashboard Configuration
JWT_SECRET=your-secure-jwt-secret-here
ADMIN_EMAIL=admin@vfl-manager.com
ADMIN_PASSWORD=your-secure-admin-password

# Bot Customization
BOT_NAME=VFL Manager
DEFAULT_EMBED_COLOR=#1f8b4c
TEAM_LOGO_BASE_URL=https://your-cdn.com/logos/

# Website Configuration
WEBSITE_TITLE=VFL Manager Hub
WEBSITE_DESCRIPTION=Your premier destination for VFL trading and statistics
DISCORD_INVITE_URL=https://discord.gg/your-invite-code

# Automation Settings
AUTO_POST_TRADES=true
AUTO_POST_SCORES=true
TRADE_CHECK_INTERVAL=300000
SCORE_CHECK_INTERVAL=600000

# External API Configuration (Optional)
SPORTS_API_KEY=your_sports_api_key_here
SPORTS_API_URL=https://api.sportsdata.io

# Twitch Integration (Existing)
TWITCH_CALLBACK_URL=/twitch/webhook
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_SECRET=your_twitch_secret

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/vfl-manager.log