# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
PUBLIC_KEY=your_discord_public_key_here
APP_ID=your_discord_app_id_here

# Database Configuration
FIRESTORE_EMULATOR_HOST=localhost:8080
SERVICE_ACCOUNT_FILE=path/to/service-account.json
# OR use inline service account
SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project"}

# Server Configuration
PORT=3000
DEPLOYMENT_URL=your-domain.com
NODE_ENV=production

# Twitch Integration (Optional)
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_SECRET=your_twitch_webhook_secret
TWITCH_CALLBACK_URL=https://your-domain.com/twitch/webhook

# Web Interface Configuration
JWT_SECRET=your_jwt_secret_for_admin_auth
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=secure_admin_password

# Firebase Auth Configuration (for admin portal)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id

# Cloudflare Configuration
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token